<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:contentDescription="@string/description_background_image"
        android:id="@+id/image_background"
        android:src="@drawable/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_medicine_details_name_label"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:text="@string/name_label"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/layout_margin" />

    <TextView
        android:id="@+id/text_medicine_details_name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_margin"
        android:width="200dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_medicine_details_name_label"
        tools:text="Diclofenac" />

    <TextView
        android:id="@+id/text_medicine_details_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginTop="8dp"
        android:text="@string/description_label"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_medicine_details_name_label"
        android:layout_marginLeft="@dimen/layout_margin" />

    <TextView
        android:id="@+id/text_medicine_description"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/text_medicine_details_name"
        app:layout_constraintTop_toTopOf="@+id/text_medicine_details_description_label"
        tools:text="Anti-infalatory" />

    <TextView
        android:id="@+id/text_medicine_details_frequency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/frequency_label"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/text_medicine_details_description_label"
        app:layout_constraintTop_toBottomOf="@+id/text_medicine_details_description_label" />

    <TextView
        android:id="@+id/text_medicine_details_frequency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/frequency_after_label"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/text_medicine_description"
        app:layout_constraintTop_toBottomOf="@+id/text_medicine_details_description_label"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_medicine_details_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="320dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_medicine_details_frequency_text"
        tools:text="3"
        android:layout_marginRight="120dp" />

    <TextView
        android:id="@+id/text_medicine_details_frequency_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="250dp"
        android:paddingLeft="5dp"
        android:text="@string/frequency_hours"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_medicine_details_frequency"
        android:layout_marginRight="60dp"
        android:paddingStart="5dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_medicine_details_start_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/min_marging"
        android:text="@string/start_date_label"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/text_medicine_details_frequency_label"
        app:layout_constraintTop_toBottomOf="@+id/text_medicine_details_frequency_label" />

    <TextView
        android:id="@+id/text_medicine_details_start_date"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="@string/date_format"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/text_medicine_description"
        app:layout_constraintTop_toTopOf="@+id/text_medicine_details_start_date_label" />

    <TextView
        android:id="@+id/text_medicine_details_end_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/min_marging"
        android:text="@string/end_date_label"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/text_medicine_details_start_date_label"
        app:layout_constraintTop_toBottomOf="@+id/text_medicine_details_start_date_label" />

    <TextView
        android:id="@+id/text_medicine_details_end_date"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/date_format"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/text_medicine_details_start_date"
        app:layout_constraintTop_toBottomOf="@+id/text_medicine_details_start_date" />


</android.support.constraint.ConstraintLayout>